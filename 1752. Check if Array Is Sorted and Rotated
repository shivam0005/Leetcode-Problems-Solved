class Solution {
public:
    bool check(vector<int>& nums) {
        //there would not be more than one case
        // where nums[i-1]>nums[i] in cyclic way
        int count = 0;
        int n = nums.size();
        for(int i=1; i<n; i++){
            if(nums[i-1]>nums[i]){
                count++;
            }
        }
        if(nums[n-1]>nums[0]){
            count++;
        }
        //if every element is same
        if(count<=1){
            return true;
        }
        return false;
    }
};
